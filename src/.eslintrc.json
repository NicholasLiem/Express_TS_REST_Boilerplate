{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "@typescript-eslint/indent": ["error", 4],
        "@typescript-eslint/ban-ts-comment": [
            "error",
            {
                "ts-ignore": false,
                // "ts-ignore": "allow-with-description",
                "ts-expect-error": false,
                "ts-nocheck": true,
                "ts-check": false
            }
        ]
    }   
}
